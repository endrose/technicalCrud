@{
    ViewData["Title"] = "Home Page";
}


@using technicalTestCrud.Helpers

<div class="container mt-4">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h2 class="mb-0">Products</h2>
        </div>
        <div class="col-auto">
            <a asp-controller="Products" asp-action="Create"        class="btn btn-sm btn-success">
                Add Product
            </a>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col">
                        <h5 class="card-title">@item.Name</h5>

                            </div>
                            <div class="col-auto">
                                <a asp-action="Delete" asp-controller="Products"  asp-route-id="@item.Id"
                                       class="btn btn-sm btn-danger">
                                    Delete
                                </a>
                            </div>
                        </div>
                        <p class="card-text">
                            <strong>Price:</strong> @CurrencyHelper.ToRupiah(@item.Price)
                        </p>
                    </div>
                    <div class="card-footer text-end">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-sm btn-primary">
                            Details
                        </a>
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-warning">
                            Edit
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>