@model technicalTestCrud.Models.Product

@{
  ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
  <h2>Edit Product</h2>

  <form asp-action="Edit" method="post" enctype="multipart/form-data">
    <!-- hidden id -->
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
      <label asp-for="Name" class="form-label"></label>
      <input asp-for="Name" class="form-control" />
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Description" class="form-label"></label>
      <textarea class="form-control" rows="3" asp-for="Description"></textarea>
      <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Price" class="form-label"></label>
      <input asp-for="Price" class="form-control" />
      <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label class="form-label">Current Image</label>
      @if (!string.IsNullOrEmpty(Model.ImagePath))
      {
        <div>
          <img src="@Model.ImagePath" alt="Product Image" class="img-thumbnail" style="max-height:150px;" />
        </div>
      }
    </div>

    <div class="mb-3">
      <label asp-for="ImageFile" class="form-label">Upload New Image</label>
      <input asp-for="ImageFile" type="file" class="form-control" />
    </div>

    <div class="mt-3">
      <button type="submit" class="btn btn-primary">Update</button>
      <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        Back
      </a>
    </div>
  </form>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}