@{
  ViewData["Title"] = "Technical Test";
}

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Card Wrapper -->
      <div class="card shadow-sm border-0">
        <div class="card-body text-center">
          <!-- Header -->
          <h1 class="display-4 mb-3">@ViewData["Title"]</h1>

          <!-- Description -->
          <p class="lead">
            Kebutuhan technical test <strong>ENDROS</strong>.
          </p>

          <!-- Optional Info / Note -->
          <div class="alert alert-info mt-4" role="alert">
            Silakan lihat menu navigasi untuk mengakses fitur produk.
          </div>

          <!-- Optional Button -->
          <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
            Lihat Products
          </a>
        </div>
      </div>
    </div>
  </div>
</div>